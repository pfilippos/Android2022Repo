<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAboutUs">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cfhelbol"
        android:text="Φίλιππος Πάνος"
        android:textColor="@color/gteal"
        android:textSize="30sp"
        app:fontFamily="@font/cfhelbol"
        app:layout_constraintBottom_toTopOf="@+id/giorgos2"
        app:layout_constraintEnd_toEndOf="@+id/giorgos2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/giorgos2"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine"
        app:layout_constraintVertical_bias="0.604" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cfhelbol"
        android:text="Γεώργιος Χριστίδης"
        android:textColor="@color/gteal"
        android:textSize="30sp"
        app:fontFamily="@font/cfhelbol"
        app:layout_constraintBottom_toTopOf="@+id/Giorgos"
        app:layout_constraintEnd_toEndOf="@+id/Giorgos"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/Giorgos"
        app:layout_constraintTop_toBottomOf="@+id/giorgos"
        app:layout_constraintVertical_bias="0.862" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cfhelbol"
        android:text="Παναγιώτης Παπασωτηρίου"
        android:textColor="@color/gteal"
        android:textSize="30sp"
        app:fontFamily="@font/cfhelbol"
        app:layout_constraintBottom_toTopOf="@+id/giorgos"
        app:layout_constraintEnd_toEndOf="@+id/giorgos"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/giorgos"
        app:layout_constraintTop_toBottomOf="@+id/giorgos2"
        app:layout_constraintVertical_bias="0.743" />

    <TextView
        android:id="@+id/Giorgos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cfhellig"
        android:text="Fourth Year Student"
        android:textSize="19sp"
        app:fontFamily="@font/cfhellig"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/giorgos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cfhellig"
        android:text="Third Year Student"
        android:textSize="19sp"
        app:fontFamily="@font/cfhellig"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/giorgos2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cfhellig"
        android:text="Third Year Student"
        android:textSize="19sp"
        app:fontFamily="@font/cfhellig"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:background="@color/Gray"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:title="@string/about_us"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/feather" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="229dp"
        android:layout_height="45dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="53dp"

        android:fontFamily="@font/cfhelbol"
        android:text="About Us.."
        android:textSize="38dp"
        app:fontFamily="@font/cfhelbol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="352dp"
        android:layout_height="92dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="227dp"
        android:layout_marginEnd="14dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="We are a group of three students from\nthe Department of Informatics of\nAristotle University of Thessaloniki."
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>