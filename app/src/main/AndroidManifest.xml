<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quickNotes" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Test1" >
        <activity
            android:name="com.example.quickNotes.ActivitynotesAdd"
            android:exported="false"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name="com.example.quickNotes.ActivitynotesEdit"
            android:exported="false"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name="com.example.quickNotes.ActivityAppinfo"
            android:exported="false" />
        <activity
            android:name="com.example.quickNotes.ActivityAboutUs"
            android:exported="false" />
        <activity
            android:name="com.example.quickNotes.Activitynotes"
            android:exported="false"
            android:theme="@style/Theme.Design.NoActionBar" /> <!-- added noactionbar style in manifest and Used NoActionBar so it would not crash because of the added toolbar in the notes activity -->
        <activity
            android:name="com.example.quickNotes.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>